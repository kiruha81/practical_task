<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %>
    <div class="ml-5">
      <% if current_user.following?(user) %>
        <td><%= link_to 'Unfollow', user_relationships_path(user), method: :delete, class: "btn btn-sm btn-danger" %></td>
      <% else %>
        <% if user.id == current_user.id %>
        <% else %>
          <td><%= link_to 'Follow', user_relationships_path(user), method: :post, class: "btn btn-sm btn-info" %></td>
        <% end %>
      <% end %>
    </div>
  </tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>Follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user), class: 'text-dark' %></th>
  </tr>
  <tr>
    <th>Followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user), class: 'text-dark' %></th>
  </tr>
</table>
<div class='row'>

</div><br>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>