
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to(@bookid.user) do %>
            <%= image_tag @bookid.user.get_profile_image, size:"100x100" %><br>
            <%= @bookid.user.name %>
            <% end %>
          </td>
          <td><%= link_to @bookid.title, @bookid %></td>
          <td><%= @bookid.body %></td>
          <% if @bookid.favorited_by?(current_user) %>
            <td><%= link_to book_favorites_path(@bookid), method: :delete do %>
                  <i class="fas fa-thumbs-up"></i>
                <% end %><%= @bookid.favorites.count %></td>
          <% else %>
            <td><%= link_to book_favorites_path(@bookid), method: :post do %>
                  <i class="far fa-thumbs-up"></i>
                <% end %><%= @bookid.favorites.count %></td>
          <% end %>
          <td>💬<%= @bookid.book_comments.count %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@bookid), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @bookid, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <table class='table'>
        <% @bookid.book_comments.each do |book_comment| %>
        <tr>
          <td><%= link_to(@bookid.user) do %>
            <%= image_tag book_comment.user.get_profile_image, size: '50x50' %><br>
            <%= book_comment.user.name %>
            <% end %>
          </td>
          <td><%= book_comment.comment %></td>
          <td><%= book_comment.created_at.strftime('%Y/%m/%d(%a) %R') %></td>
          <td>
            <% if book_comment.user == current_user %>
              <%= link_to 'Destroy', book_book_comment_path(book_comment.book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
        <div>
        <%= form_with model: [@bookid, @book_comment] do |f| %>
          <%= f.text_area :comment, size: "48x1", placeholder: "Comment here." %><br>
          <%= f.submit "Send Comment" %>
        <% end %>
        </div>
      </table>
    </div>
  </div>
</div>