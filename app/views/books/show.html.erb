<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to(@bookid.user) do %>
            <%= image_tag @bookid.user.get_profile_image, size:"100x100" %><br>
            <div class='text-dark'><%= @bookid.user.name %></div>
            <% end %>
          </td>
          <td><%= link_to @bookid.title, @bookid, class: 'text-dark' %></td>
          <td><%= @bookid.body %></td>
          <td id="favorite_buttons_<%= @bookid.id %>"><%= render 'favorites/favorite', bookid: @bookid %></td>
          <td>💬<%= @bookid.book_comments.count %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@bookid), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @bookid, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <div id='comment_area_<%= @bookid.id %>'><%= render 'book_comments/book_comment', bookid: @bookid %></div>
      <table>
        <tr>
          <div id='#book-comment'><%= render 'book_comments/comment_form', bookid: @bookid, book_comment: @book_comment %></div>
        </tr>
      </table>
    </div>
  </div>
</div>