<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Comments</th>
      <th>Favorites</th>
      <th>Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td class='text-dark'><%= link_to book.title,book,class: 'text-dark' %></td>
        <td><%= book.body %></td>
        <td class='text-dark'><%= link_to "ðŸ’¬#{book.book_comments.count}", book_path(book.id), class: 'text-dark' %></td>
        <td><i class="far fa-thumbs-up "></i><%= book.favorites.count %></td>
        <td class="view-count"><i class="far fa-eye"></i> <%= book.view_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>